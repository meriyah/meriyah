{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "preserveConstEnums": false,
    "preserveWatchOutput": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "es2018",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "mocha"]
  },
  "include": ["src"]
}

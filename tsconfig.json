{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "preserveConstEnums": false,
    "preserveWatchOutput": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2021",
    "resolveJsonModule": true,
    "types": ["node", "./types/test262-parser-runner.d.ts"],
    "skipLibCheck": true
  },
  "include": ["src", "test"]
}
